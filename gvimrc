" フォント設定
set guifont=MS_Gothic:h11:cSHIFTJIS
set ambiwidth=double
"set encoding=utf8
set antialias

" colorscheme
"colorscheme molokai
"colorscheme gruvbox
colorscheme solarized
"colorscheme PerfectDark
"set background=light
set background=dark
"colorscheme desert
" 不可視文字の表示食

" メニューの表示
set guioptions=gRLt
" デフォルトのメニュー表示
"set guioptions=egmrLtT

" 警告音を出さない
set visualbell t_vb=

" 初期表示位置
"winpos 0 0
" 画面サイズ
"set lines=69
"set lines=81
set columns=100
"set columns=109

" 透過の設定
"autocmd GUIEnter * set transparency=220
